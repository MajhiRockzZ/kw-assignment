<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_hr_employee" model="ir.ui.view">
            <field name="name">Employee</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <!-- EMPLOYEE SUBMISSION APPROVAL STATUS-->
                <xpath expr="//div[@name='button_box']" position="before">
                    <h1 class="mb-4">
                        <span class="badge badge-primary">
                            <field name="emp_status" readonly="1"/>
                        </span>
                    </h1>
                </xpath>

                <!-- ACEDIMIC DETAILS PAGE-->
                <xpath expr="//page[@name='hr_settings']" position="after">
                    <page name="public" string="Education Details">
                        <group string="Acedimic details">
                            <field name="emp_college_id"/>
                        </group>
                    </page>
                </xpath>

                <!-- REJECT AND APPROVE BUTTONS-->
                <xpath expr="//form">
                    <header>
                        <button string="Approve" type="object" class="btn-success btn-lg" name="employee_approve"
                                groups="kw_assignment.group_hr"></button>
                        <button string="Reject" type="object" class="btn-danger btn-lg" name="employee_reject"
                                groups="kw_assignment.group_hr"></button>
                    </header>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
